{
  "name": "ytmusic",
  "version": "0.0.3",
  "description": "Unofficial YouTube Music Desktop Application",
  "appId": "org.mayrd.ytmusic",
  "repository": {
    "type": "git",
    "url": "git://github.com/mayrd/ytmusic-desktop.git"
  },
  "main": "main.js",
  "devDependencies": {
    "electron": "^10.1.2",
    "electron-packager": "^15.1.0"
  },
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . ytmusic --overwrite --platform=darwin --arch=x64 --icon=media/logo.png --prune=true --out=release-builds",
    "package-win": "electron-packager . ytmusic --overwrite --asar=true --platform=win32 --arch=ia32 --icon=media/logo.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"YouTube Music\"",
    "package-linux": "electron-packager . ytmusic --overwrite --asar=true --platform=linux --arch=x64 --icon=media/logo.png --prune=true --out=release-builds"
  }
}
